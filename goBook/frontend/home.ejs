  <section class="headline">
    <h1>Over 9,000 hotels and homes across 6 countries</h1>
    <form class="search-form" autocomplete="off" action="/search" method="post">
      <input type="text" id="q" name="query" onKeyUp="showResults(this.value)" placeholder="Search by city" />
      <input type="submit" class="search-btn" value="Search" name="submit" />
    </form>
    <div id="result"></div>
  </section>

  <form action="/hotel" method="post">
    <input type="hidden" id="blank" name="query2" />
    <input type="submit" id="blank2" onclick="fun2()" name="blank" hidden="hidden" />
  </form>

  <section class="hotelList">
    <% if(hotel!=null) { %>
      <% hotel.forEach(function(hotel){ %>
        <div class="hotelList-container">
          <div class="hotelList-img">
            <img src="static/<%= hotel.image %>" alt="Flexbox Feature" width="200" height="250" />
          </div>
          <div class="hotelList-info">
            <div class="hotel-info">
              <h2 class="hotel-name">
                <!-- changes -->

                <button id="name_hotel" value="<%= hotel.name %>" onclick="fun(this)">
                  <%= hotel.name %>
                </button>
                <!-- <a href="hotel_link"><%= hotel.name %></a> -->
              </h2>
              <span class="rating"><i class="fa fa-star"></i>
                <%= hotel.rating %>
              </span>
            </div>
            <span class="hotel-address">
              <%= hotel.address %>
            </span>
            <div class="hotel-price">
              <span class="hotelList-price"> â‚¹
                <%= hotel.price %>
              </span><span class="hotel-price-tag"> - room per night</span>
            </div>
          </div>
        </div>
        <% }) %>
          <% } %>
  </section>

  <style>
    /*Search Bar*/
    form.search-form {
      padding: 20px 0 0 0;
      text-align: center;
    }

    .search-form input[type="text"] {
      width: 35%;
      padding: 12px;
      border-radius: 20px;
      background: #eeee;
      color: #252525;
      border: 0;
      outline: 0;
    }

    .search-form .search-btn {
      width: 15%;
      padding: 12px;
      border-radius: 20px;
      border: 0;
      outline: 0;
      font-weight: 900;
      cursor: pointer;
      background: #bad7e9;
    }

    .search-form .search-btn:hover {
      background: #eb455f;
      color: #ffffff;
    }

    input[type="text"]:focus-visible {
      border: 1px solid #ff5722;
      outline: 0;
    }

    /* for search bar result */
    #result {
      border: 1px dotted #000000;
      background: #eee;
      color: #5b5b5b;
      width: 32%;
      margin: 0 auto;
      position: relative;
      left: -120px;
      border-radius: 5px;
      display: flex;
      scroll-behavior: smooth;
      overflow: auto;
      max-height: 100px;
    }

    #list1 li {
      padding: 8px 8px 8px 5px;
      border-bottom: 1px solid #3333;
      display: block;
      text-transform: capitalize;
      cursor: pointer;
    }

    ul#list1 {
      width: 100%;
    }

    #result ul li:hover {
      background: #33333333;
    }

    /* SECTIONS */
    .headline {
      width: 100%;
      height: 22vh;
      min-height: 230px;
      background: #408E91;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .hotelList {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      height: auto;
      background-color: #ffffff;
      padding: 50px 20px;
      justify-content: center;
      gap: 2%;
    }

    .hotelList-container {
      width: 30%;
      margin-top: 20px;
      box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
      border-radius: 5px;
      transition: 0.1s ease-out;
    }

    .hotelList-container:hover {
      transform: translateY(-5px) scale(1.005) translateZ(0);
      box-shadow: 0 24px 36px rgba(0, 0, 0, 0.11);
    }

    .hotelList-info {
      padding: 6px 10px;
    }

    .hotelList-container p {
      color: #000;
      text-align: center;
      line-height: 1.4;
      margin-bottom: 15px;
    }

    .hotelList-container img {
      width: 100%;
      margin-bottom: 5px;
      border-radius: 5px 5px 0 0;
    }

    .hotel-name a {
      text-align: left;
      font-size: 16px;
      color: #000;
      text-transform: capitalize;
    }

    .hotel-address {
      color: #222222a8;
    }

    .hotel-price {
      margin: 10px 0 0 0;
    }

    .hotel-info {
      display: flex;
      align-items: center;
      flex-direction: row;
      justify-content: space-between;
      padding: 0 4px;
    }

    .rating {
      font-size: 16px;
      font-weight: 700;
    }

    span.hotelList-price {
      font-weight: 600;
      font-size: 16px;
      color: #ee2a24;
    }

    span.hotel-price-tag {
      color: #333333c7;
    }

    button#name_hotel {
      font-size: 1.3rem;
      line-height: 1.4;
      background: 0;
      border: 0;
      font-weight: 800;
      margin: 5px 0;
      cursor: pointer;
    }

    /* Media Queries */
    /* Mobile Devices - Phones/Tablets */

    @media only screen and (max-width: 720px) {
      .hotelList {
        flex-direction: column;
        padding: 50px;
      }

      /* MOBILE HEADINGS */

      h1 {
        font-size: 1.9rem;
      }

      h2 {
        font-size: 1rem;
      }

      p {
        font-size: 0.8rem;
      }

      /* SECTIONS */

      .headline {
        height: 20vh;
      }

      .hotelList-container p {
        margin-bottom: 25px;
      }

      .hotelList-container {
        margin-top: 20px;
      }

      .hotelList-container:nth-child(2) {
        order: -1;
      }
    }
  </style>

  <script>
    function fun(element) {
      document.getElementById("blank").value = element.value;
      //console.log(document.getElementById("blank").value);
      document.getElementById("blank2").click();
    }

    //var list_of_city=city_data;

    var search_t = document.getElementById("blank3").placeholder;
    // console.log(search_terms);
    // var search_terms = ['apple', 'apple watch', 'apple macbook', 'apple macbook pro', 'iphone', 'iphone 12'];
    var search_terms = search_t.split(",");
    search_terms = fun3(search_terms);

    function fun3(arr) {
      var unique = arr.reduce(function (acc, curr) {
        if (!acc.includes(curr)) acc.push(curr);
        return acc;
      }, []);
      return unique;
    }

    function autocompleteMatch(input) {
      if (input == "") {
        return [];
      }
      var reg = new RegExp(input);
      return search_terms.filter(function (term) {
        if (term.match(reg)) {
          return term;
        }
      });
    }

    function showResults(val) {
      res = document.getElementById("result");
      res.innerHTML = "";
      let list = "";
      let terms = autocompleteMatch(val);
      for (i = 0; i < terms.length; i++) {
        list += "<li id=" + terms[i] + ">" + terms[i] + "</li>";
      }
      res.innerHTML = '<ul id="list1" >' + list + "</ul>";

      // after it
      var lis = document.getElementById("list1").getElementsByTagName("li");

      for (var i = 0; i < lis.length; i++) {
        lis[i].addEventListener("click", doStuff, false);
      }

      function doStuff() {
        var te = document.getElementById("q");
        te.value = this.id;
      }

